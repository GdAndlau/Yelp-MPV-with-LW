<%= render "navbar", restaurant: @restaurant %>

<h1>This is just one restaurant</h1>

<h3><%= @restaurant.name %></h3>

<h3><%= @restaurant.address %></h3>

<h3><%= @restaurant.category %></h3>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
    <li class="list-group-item"><%= review.rating %></li>
  <% end %>
</ul>

<%= link_to "add a review", new_restaurant_review_path(@restaurant.id) %>
